<%-include('header');-%>
<body class=" font-Montserrat">
   
    <%if(list.results.length==0){%>
        <p class="mt-32 text-center text-xs">No movies found</p>
    <%}%>
    <form action="/" method="post">
        <div class="mx-10 mt-32 mb-10 grid lg:grid-cols-5 md:grid-cols-4 gap-y-5 md:grid-rows-4 sm:grid-cols-2 grid-cols-1" >
            <%for(var i=0;i<list.results.length;i++){%>
                <button type="submit" name="button" value="<%=list.results[i].id%>" class="flex  items-center justify-center">
                    <div class="movie w-[80%] p-5 shadow-2xl rounded-[30px] pb-7 transition duration-300 ease-in hover:scale-110">
                        <img class="mx-auto md:w-[200px]  w-[150px]  rounded-[30px] " src="https://image.tmdb.org/t/p/original/<%=list.results[i].poster_path%>">
                        <p class="text-center font-semibold"><%=list.results[i].title%></p>
                    </div>
                   
                </button>
            <%}%>    
        </div>
    </form>
    
    <%if(list.page<list.total_pages){%>
        <form method="post" action="/" class="text-center">
            <button name="button" value="showMore" class="px-6 py-3 text-white bg-black rounded-lg mb-10">Show more</button>
        </form>
    <%}%>


    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="script/index.js" type="text/javascript"></script>
    <script src="https://kit.fontawesome.com/abe0947dcd.js" crossorigin="anonymous"></script>
</body>
</html>